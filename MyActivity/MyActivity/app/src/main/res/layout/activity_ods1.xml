<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ODS1Activity">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="220dp"
      android:layout_height="220dp"
      android:src="@drawable/ods1"
      tools:layout_editor_absoluteX="95dp"
      tools:layout_editor_absoluteY="55dp" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="359dp"
      android:layout_height="55dp"
      android:text="Objetivo 1. Acabar com a pobreza em todas as suas formas, em todos os lugares  "
      tools:layout_editor_absoluteX="26dp"
      tools:layout_editor_absoluteY="336dp" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="359dp"
      android:layout_height="60dp"
      android:text="1.1 Até 2030, erradicar a pobreza extrema para todas as pessoas em todos os lugares, atualmente medida como pessoas vivendo com menos de US$ 1,90 por dia  "
      tools:layout_editor_absoluteX="26dp"
      tools:layout_editor_absoluteY="413dp" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="359dp"
      android:layout_height="70dp"
      android:text="1.2 Até 2030, reduzir pelo menos à metade a proporção de homens, mulheres e crianças, de todas as idades, que vivem na pobreza, em todas as suas dimensões, de acordo com as definições nacionais  "
      tools:layout_editor_absoluteX="26dp"
      tools:layout_editor_absoluteY="493dp" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="359dp"
      android:layout_height="wrap_content"
      android:text="1.3 Implementar, em nível nacional, medidas e sistemas de proteção social adequados, para todos, incluindo pisos, e até 2030 atingir a cobertura substancial dos pobres e vulneráveis  "
      tools:layout_editor_absoluteX="26dp"
      tools:layout_editor_absoluteY="582dp" />

  <Button
      android:id="@+id/btnvoltar1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="VOLTAR"
      tools:layout_editor_absoluteX="161dp"
      tools:layout_editor_absoluteY="655dp" />

</androidx.constraintlayout.widget.ConstraintLayout>